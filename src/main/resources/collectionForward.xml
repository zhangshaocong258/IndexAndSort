<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.CollectionForwardDao">

    <resultMap id="ForwardMap" type="Forward">
        <id property="id" column="id"/>
        <result property="url" column="url"/>
        <result property="description" column="description"/>
        <result property="quality1" column="quality1"/>
        <result property="keyWords" column="keyWords"/>
    </resultMap>

    <select id="selectById" resultType="Forward">
        select * from collectionf where id = #{id}
    </select>

    <select id="selectAll" resultMap="ForwardMap">
        select * from collectionf
    </select>

    <insert id="insert" parameterType="Forward" useGeneratedKeys="true" keyProperty="id">
        <selectKey resultType ="java.lang.Integer" keyProperty= "id" order= "AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey >
        insert into collectionf(title,url,description,quality1,keyWords)
        values(#{title},#{url},#{description},#{quality1},#{keyWords})
    </insert>

    <insert id="insertAll" parameterType="java.util.List" useGeneratedKeys="true" keyProperty="id">
        <selectKey resultType ="java.lang.Integer" keyProperty= "id" order= "AFTER">
            SELECT LAST_INSERT_ID()
        </selectKey >
        insert into collectionf(title,url,description,quality1,keyWords) values
        <foreach collection ="list" item ="item" index ="index" separator =",">
            (#{item.title},#{item.url},#{item.description},#{item.quality1},#{item.keyWords})
        </foreach>
    </insert>

    <update id="update" parameterType="Forward">
        update collectionf set title=#{title},url=#{url},description=#{description},quality1=#{quality1},keyWords=#{keyWords} where id=#{id}
    </update>

    <delete id="delete" parameterType="int">
        delete from collectionf where id = #{id}
    </delete>
</mapper>